<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bezorg_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Bezorg_App.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Bezorg_App">

    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Status" Icon="status.svg">
            <ShellContent ContentTemplate="{DataTemplate views:BezorgstatussenPage}" />
        </Tab>
        <Tab Title="Bevestigen" Icon="checkbox.svg">
            <ShellContent ContentTemplate="{DataTemplate views:BevestigBezorging}" />
        </Tab>
        <Tab Title="Kloktijden" Icon="time.svg">
            <ShellContent ContentTemplate="{DataTemplate views:KloktijdenPage}" />
        </Tab>
        <Tab Title="Account" Icon="user.svg">
            <ShellContent ContentTemplate="{DataTemplate views:AccountPage}" />
        </Tab>
    </TabBar>

</Shell>
