<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bezorg_App.BevestigBezorging"
             Title="Bevestig Bezorging"
             BackgroundColor="#F9FAFB">


    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="30" HorizontalOptions="FillAndExpand">


            <Label Text="Bevestig de bezorging"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center" />


            <Frame HasShadow="True"
                    Padding="0"
                    CornerRadius="20"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center">
                <Button Text="Bevestig bezorging"
                    FontSize="18"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="16"
                    Padding="16,12"
                    WidthRequest="250"
                    Clicked="OnBevestigBezorgingClicked" />
            </Frame>



            <Frame x:Name="PreviewImageBorder"
                   IsVisible="False"
                   WidthRequest="300"
                   HeightRequest="300"
                   BorderColor="#D0D3D4"
                   CornerRadius="20"
                   Padding="0"
                   HasShadow="True"
                   BackgroundColor="White"
                   HorizontalOptions="Center">
                <Image x:Name="PreviewImage"
                       Aspect="AspectFill"
                       BackgroundColor="#E0E0E0" />
            </Frame>


            <Label x:Name="ConfirmationLabel"
                   Text="Bezorging bevestigd!"
                   FontSize="20"
                   TextColor="Green"
                   FontAttributes="Bold"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
