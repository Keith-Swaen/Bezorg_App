<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bezorg_App.BevestigBezorging"
             Title="Bevestig Bezorging"
             BackgroundColor="#F4F4F4">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" HorizontalOptions="FillAndExpand">

            <Label Text="Bevestig de bezorging"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#333"
               HorizontalOptions="Center" />

            <Button Text="Bevestig bezorging"
                FontSize="18"
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="12"
                Padding="14"
                HorizontalOptions="Center"
                Clicked="OnBevestigBezorgingClicked" />

            <Border Stroke="#CCCCCC"
                StrokeThickness="2"
                BackgroundColor="Transparent"
                Padding="0"
                HeightRequest="300"
                WidthRequest="300"
                IsVisible="False"
                x:Name="PreviewImageBorder"
                HorizontalOptions="Center">
                <Image x:Name="PreviewImage"
                   Aspect="AspectFill"
                   BackgroundColor="#E0E0E0" />
            </Border>

            <Label x:Name="ConfirmationLabel"
               Text="Bezorging bevestigd!"
               FontSize="20"
               TextColor="Green"
               FontAttributes="Bold"
               IsVisible="False"
               HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
