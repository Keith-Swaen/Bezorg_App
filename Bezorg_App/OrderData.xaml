<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bezorg_App.OrderData"
             Title="Bestelgegevens"
             BackgroundColor="#F9FAFB">
    

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            
            <Label Text="Bestelgegevens"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2C3E50" />
            

            
            <Frame Padding="16"
                   HasShadow="True"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="#DDE1E4"
                   IsVisible="{Binding IsBusy}">
                
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsRunning="True"
                                   Color="#007AFF" 
                                   WidthRequest="30"
                                   HeightRequest="30" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
            </Frame>

            
            <Frame Padding="16"
                   HasShadow="True"
                   CornerRadius="12"
                   BackgroundColor="White"
                   BorderColor="#DDE1E4">
                <Label x:Name="ResultLabel"
                       Text="Resultaten worden hier getoond"
                       FontSize="16"
                       TextColor="#34495E" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
