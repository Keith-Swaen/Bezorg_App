<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Bezorg_App.Pages"
             x:Class="Bezorg_App.Pages.BezorgstatussenPage">


    <!-- Layout met 3 rijen: titel, hoofdinhoud en paginering -->
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Pagina titel -->
        <Label Text="Bezorgstatussen"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10"/>

        <!-- Lijst met bezorgstatussen, verversbaar -->
        <RefreshView
            Grid.Row="1"
            IsRefreshing="{Binding IsRefreshing}"
            Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding CurrentPageStates}"
                            ItemsLayout="VerticalList"
                            EmptyView="Er zijn momenteel geen bezorgstatussen beschikbaar.">
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="0,5"
                               CornerRadius="5"
                               BorderColor="LightGray"
                               HeightRequest="100">
                            
                            <VerticalStackLayout VerticalOptions="FillAndExpand">
                                <Label Text="{Binding Id, StringFormat='ID: {0}'}"
                                       FontSize="14" />
                                <Label Text="{Binding State}" FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding DateTime, StringFormat='Datum: {0:dd-MM-yyyy HH:mm}'}"
                                       FontSize="12" />
                            </VerticalStackLayout>
                            
                            <!-- Klik-actie bij statusselectie-->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:BezorgstatussenPage}}, Path=BindingContext.StateTappedCommand}"
                                    CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Navigatieknoppen voor paginering -->
        <HorizontalStackLayout Grid.Row="2"
                               HorizontalOptions="Center"
                               Spacing="20"
                               Margin="0,20">
            
            <Button Text="Vorige"
                    Clicked="OnPreviousPageClicked" />
            
            <Label Text="{Binding PageIndicator}"
                   VerticalOptions="Center"/>

            <Button Text="Volgende"
                    Clicked="OnNextPageClicked" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
