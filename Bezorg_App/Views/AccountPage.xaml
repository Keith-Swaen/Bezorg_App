<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bezorg_App.Views.AccountPage"
             Title="Account">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Accountgegevens" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Frame CornerRadius="12" Padding="20" BackgroundColor="#F2F2F7" HasShadow="True">
            <VerticalStackLayout Spacing="10">
                <Label Text="Naam:" FontAttributes="Bold" />
                <Label x:Name="NameLabel" FontSize="18" />
                <Label Text="E-mail:" FontAttributes="Bold" />
                <Label x:Name="EmailLabel" FontSize="18" />
                <Label Text="Functie:" FontAttributes="Bold" />
                <Label x:Name="FunctieLabel" FontSize="18" />
            </VerticalStackLayout>
        </Frame>
        <Button Text="Uitloggen"
                BackgroundColor="Red"
                TextColor="White"
                FontAttributes="Bold"
                Clicked="OnLogoutClicked"
                Padding="16,12"
                CornerRadius="10"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage> 