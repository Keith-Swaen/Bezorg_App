<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bezorg_App.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <!-- Je eigen logo -->
            <Image
                Source="logo.png"
                HeightRequest="225"
                Aspect="AspectFit"
                SemanticProperties.Description="App logo" />

            <!-- Navigatieknoppen -->
            <Button
                Text="Ga naar Bevestig Bezorging"
                Clicked="OnNavigateClicked"
                HorizontalOptions="Fill"
                HeightRequest="50" />

            <Button
                Text="Bekijk GPS Locatie"
                Clicked="OnLocationClicked"
                HorizontalOptions="Fill"
                HeightRequest="50" />

            <Button
                Text="Open locatie in Google Maps"
                Clicked="OnOpenInMapsClicked"
                HorizontalOptions="Fill"
                HeightRequest="50" />

            <Button
                Text="Bekijk Bezorgstatussen"
                Clicked="OnViewStatusesClicked"
                HorizontalOptions="Fill"
                HeightRequest="50" />
            <Button
                Text="Kloktijden"
                Clicked="OnKloktijdenClicked"
                HorizontalOptions="Fill"
                HeightRequest="50" />   
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
